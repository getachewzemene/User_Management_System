<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/wellcome_screen"
    >

    <TextView
        android:id="@+id/id_welcometv"
        android:layout_width="316dp"
        android:layout_height="50dp"
        android:text="WelCome Back"
        android:textColor="#F50057"
        android:textColorLink="#D500F9"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048" />

    <EditText
        android:id="@+id/id_username"
        android:layout_width="325dp"
        android:layout_height="55dp"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/ic_person"
        android:ems="10"
        android:hint="User Name"
        android:inputType="textPersonName"
        android:textColorHint="#D50000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/id_btn1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_welcometv"
        app:layout_constraintVertical_bias="0.423" />

    <EditText
        android:id="@+id/id_password"
        android:layout_width="332dp"
        android:layout_height="61dp"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/ic_password"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#00CFEA"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/id_btn1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_username"
        app:layout_constraintVertical_bias="0.468" />

    <Button
        android:id="@+id/id_btn1"
        android:layout_width="247dp"
        android:layout_height="56dp"
        android:background="#0029A9FF"
        android:hapticFeedbackEnabled="false"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="#FF3D00"
        android:textColorLink="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_welcometv"
        app:layout_constraintVertical_bias="0.579" />

    <TextView
        android:id="@+id/id_tv2"
        android:layout_width="174dp"
        android:layout_height="54dp"
        android:text="Not Registered Yet?"
        android:textColor="#19F900"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_btn1"
        app:layout_constraintVertical_bias="0.697" />

    <Button
        android:id="@+id/registerbtn"
        android:layout_width="148dp"
        android:layout_height="55dp"
        android:background="#07FFFFFF"
        android:shadowColor="#FF2998"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toEndOf="@+id/id_tv2"
        app:layout_constraintTop_toBottomOf="@+id/id_btn1"
        app:layout_constraintVertical_bias="0.625" />

</androidx.constraintlayout.widget.ConstraintLayout>